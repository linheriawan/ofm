# MongoDB Configuration
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/?retryWrites=true&w=majority
MONGODB_DB=ofm_production

# JWT Configuration (for authentication)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password

# External API Keys (to be configured later)
# Ride-hailing API
GOJEK_API_KEY=
GRAB_API_KEY=

# Video Conferencing
ZOOM_API_KEY=
ZOOM_API_SECRET=
GOOGLE_MEET_API_KEY=
MS_TEAMS_API_KEY=

# Messaging
TELEGRAM_BOT_TOKEN=
WHATSAPP_API_KEY=

# Application Configuration
APP_NAME=Office Facility Management
APP_URL=http://localhost:5173
NODE_ENV=development

# Aksara SSO Configuration
SSO_BASE_URL=http://localhost:5173
SSO_CLIENT_ID=your-oauth-client-id
SSO_CLIENT_SECRET=your-oauth-client-secret
SSO_REDIRECT_URI=http://localhost:5174/auth/callback

# SCIM 2.0 Integration (for data synchronization)
SCIM_CLIENT_ID=scim-ofm-prod
SCIM_CLIENT_SECRET=your-scim-client-secret
SCIM_WEBHOOK_SECRET=your-webhook-signature-secret
