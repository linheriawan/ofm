# MongoDB Configuration
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/?retryWrites=true&w=majority
MONGODB_DB=ofm_production

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# Settings Encryption
SETTINGS_ENCRYPTION_KEY=your-32-char-encryption-key-here

# Node Environment
NODE_ENV=development

# SSO/OAuth Configuration - Aksara SSO Integration
SSO_BASE_URL=http://localhost:5173
SSO_AUTHORIZATION_URL=http://localhost:5173/oauth/authorize
SSO_TOKEN_URL=http://localhost:5173/oauth/token
SSO_USERINFO_URL=http://localhost:5173/oauth/userinfo
SSO_CLIENT_ID=your-oauth-client-id
SSO_CLIENT_SECRET=your-oauth-client-secret
SSO_REDIRECT_URI=http://localhost:5174/auth/callback
SSO_SCOPES=openid email profile roles

# Supabase Configuration (for image storage)
PUBLIC_SUPABASE_URL=https://<your-project>.supabase.co
PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
PUBLIC_SUPABASE_BUCKET=room-photos
